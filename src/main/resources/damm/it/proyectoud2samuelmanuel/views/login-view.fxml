<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" onKeyPressed="#onKeyPressed" prefHeight="307.0" prefWidth="296.0" spacing="20.0" styleClass="login" stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="damm.it.proyectoud2samuelmanuel.controllers.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <ImageView fitHeight="110.0" fitWidth="164.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../img/logo-nasa-2.png" />
            </image>
         <VBox.margin>
            <Insets bottom="25.0" top="25.0" />
         </VBox.margin>
        </ImageView>
        <HBox alignment="CENTER" prefHeight="41.0" prefWidth="230.0">
            <children>
                <TextField fx:id="txtName" prefHeight="40.0" prefWidth="230.0" promptText="User" styleClass="button" />
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="36.0" prefWidth="230.0">
            <children>
                <PasswordField fx:id="txtPwd" prefHeight="40.0" prefWidth="230.0" promptText="Password" styleClass="button" />
            </children>
        </HBox>
        <Button mnemonicParsing="false" onAction="#login" prefHeight="30.0" prefWidth="80.0" text="Acceder">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <VBox.margin>
            <Insets bottom="20.0" top="10.0" />
         </VBox.margin></Button>
    </children>
</VBox>
